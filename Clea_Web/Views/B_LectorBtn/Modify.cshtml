@model Clea_Web.ViewModels.B_LectorBtnViewModel.Modify
@{
    Layout = "~/Views/Shared/_LayoutBackEnd.cshtml";
}

<div class="content-wrapper">
    <form class="form-sample" method="post" action="@Url.Action("Modify","B_LectorBtn")" enctype='multipart/form-data'>
        <button type="submit" class="btn btn-info">儲存</button>
        @* <button type="button" class="btn btn-secondary">取消</button> *@
        <a href="@Url.Action("Index","B_LectorBtn")" class="btn btn-secondary">取消</a>
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">
                            公佈欄管理 - @(Model.IsEdit ? "編輯" : "新增")
                        </h4>
                        @Html.AntiForgeryToken()
                        @*回傳狀態*@
                        @Html.HiddenFor(x => x.IsEdit)
                        @*回傳NewsId*@
                        @Html.HiddenFor(x => x.NewsId)
                        @* <p class="card-description">
                        公佈欄管理-編輯
                        </p> *@
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    @* <label class="col-sm-3 col-form-label">姓名</label> *@
                                    @Html.LabelFor(x => x.N_Title, new { @class = "col-sm-3 col-form-label" })
                                    <div class="col-sm-9">
                                        @* <input type="text" class="form-control" /> *@
                                        @Html.TextBoxFor(x => x.N_Title, new { @class = "form-control form-control", placeholder = "公告標題" })
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group row">
                                    @*<label class="col-sm-3 col-form-label">角色啟用狀態</label>*@
                                    @* @Html.LabelFor(x=> x.RStatus, new { @class="col-sm-3 col-form-label" }) *@

                                    <div class="col-sm-9 d-flex justify-content-around">
                                        <div class="form-check">
                                            @Html.CheckBoxFor(x => x.N_IsTop, new { id = "optionsRadios1", @class = "form-check-input", @name = "optionsRadios" })
                                            @Html.LabelFor(x => x.N_IsTop, new { @class = "col-sm-12 control-label" })
                                            @*  <label for="S1">
                                            是否置頂
                                            </label>*@
                                        </div>
                                        <div class="form-check">
                                            @Html.CheckBoxFor(x => x.N_IsShow, new { id = "optionsRadios12", @class = "form-check-input", @name = "optionsRadios" })
                                            @Html.LabelFor(x => x.N_IsShow, new { @class = "col-sm-12 control-label" })
                                            @*<label for="S0">
                                            是否顯示
                                            </label>*@
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label for="exampleInputName" class="col-sm-3 col-form-label">公告類型</label>
                                    <div class="col-sm-9">
                                        @Html.DropDownListFor(x => x.N_Type, Model.DropDownListType, new { @class = "form-control form-control" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">選擇發布對象</label>
                                    <div class="col-sm-9 d-flex justify-content-around">
                                        <div class="form-check form-check-inline">
                                            @* <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1" onclick="showIndividual()"> *@
                                            @Html.RadioButtonFor(x => x.NRole, false, new { id = "inlineRadio1",value="option1" ,@class = "form-check-input", @name = "inlineRadioOptions",@onclick="showIndividual()" })
                                            <label for="inlineRadio1">
                                                個別通知
                                            </label>
                                            @* <label class="form-check-label" for="inlineRadio1">個別通知</label> *@
                                        </div>

                                        <div class="form-check form-check-inline">
                                           @*  <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2" onclick="showGroup()"> *@
                                            @Html.RadioButtonFor(x => x.NRole, true, new { id = "inlineRadio2",value="option2" ,@class = "form-check-input", @name = "inlineRadioOptions",@onclick="showGroup()" })
                                            <label for="inlineRadio1">
                                                群組通知
                                            </label>
@*                                             <label class="form-check-label" for="inlineRadio2">群組通知</label> *@
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row" id="individual" style="display:none;">
                                    <label for="exampleInputName" class="col-sm-3 col-form-label">發布講師</label>
                                    <div class="col-sm-9">
                                        @Html.DropDownListFor(x => x.PersonID, Model.DropDownListUser, new { @class = "form-control form-control" })
                                    </div>
                                </div>

                                <div class="form-group row" id="group" style="display:none;">
                                    <label for="exampleInputName" class="col-sm-3 col-form-label">發布對象</label>
                                    <div class="col-sm-9">
                                        @Html.DropDownListFor(x => x.GroupID, Model.DropDownList, new { @class = "form-control form-control" })
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-6">

                                <div class="form-group row">
                                    @* <label class="col-sm-3 col-form-label">姓名</label> *@
                                    @Html.LabelFor(x => x.N_StartDate, new { @class = "col-sm-3 col-form-label" })
                                    <div class="col-sm-9">
                                        @* <input type="text" class="form-control" /> *@
                                        @Html.EditorFor(x => x.N_StartDate, new { @class = "form-control form-control date-picker" })
                                    </div>
                                </div>
                            </div>


                            <div class="col-md-6">
                                <div class="form-group row">
                                    @Html.LabelFor(x => x.N_EndDate, new { @class = "col-sm-3 col-form-label" })
                                    <div class="col-sm-9">
                                        @Html.EditorFor(x => x.N_EndDate, new { @class = "form-control form-control date-picker" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label for="exampleInputName" class="col-sm-3 col-form-label">公告內容</label>
                                    <div class="col-sm-9">
                                        @Html.TextAreaFor(x => x.N_Content,20,150, new { @class = "form-control form-control" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label for="exampleInputName" class="col-sm-3 col-form-label">上傳檔案</label>
                                        <div class="col-sm-9">
                                            @Html.TextBoxFor(x => x.file, new { @class = "form-control form-control",id= "file", placeholder = "上傳檔案", @type = "file" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    function pageLoad() {
        init();
    }
    function init() {
        debugger;
        datetime();
    }
    function showIndividual() {
        document.getElementById("individual").style.display = "block";
        document.getElementById("group").style.display = "none";
    }
    function showGroup() {
        document.getElementById("individual").style.display = "none";
        document.getElementById("group").style.display = "block";
    }
</script>



