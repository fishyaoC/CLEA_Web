					<form class="forms-sample" method="post" action="@Url.Action("Index","B_AssignBook")">
					@Html.AntiForgeryToken()
					<div class="row">
					<div class="col-md-6">
					<div class="form-group">
					<label for="exampleInputName1">教材代碼</label>
					@Html.TextBoxFor(x => x.schBookItem.B_ID, new { @class = "form-control form-control", placeholder = "教材代碼" })
					</div>
					</div>
					<div class="col-md-6">
					<div class="form-group">
					<label for="exampleInputEmail3">教材名稱</label>
					@Html.TextBoxFor(x => x.schBookItem.B_Name, new { @class = "form-control form-control", placeholder = "教材名稱" })
