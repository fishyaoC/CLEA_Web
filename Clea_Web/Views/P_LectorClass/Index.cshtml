					</div> *@
					<!--搜尋End-->
					<!--動作-->
					<div class="mb-2 mt-2">
					</div>
					<!--動作End-->
					<!--資料Table-->
					<div class="col-lg-12 grid-margin stretch-card">
						<div class="card">
							<div class="card-body">
								<h4 class="card-title">我的課程資訊</h4>
								@*<p class="card-description">
								Add class <code>.table</code>
								</p> *@
								<div class="table-responsive">
									<table class="table">
										<thead>
											<tr>
												<th>序</th>
												<th>年度</th>
												<th>課程名稱</th>
												<th>科目名稱</th>
												<th>檔案上傳</th>
												<th>操作</th>
											</tr>
										</thead>
										<tbody>
											@if (!(Model.classMenuPageList is null) && Model.classMenuPageList.Count > 0)
											{
												Int32 rowCount = 0;
												foreach (var cMenu in Model.classMenuPageList)
												{
													rowCount++;
													<tr>
														<td>@rowCount</td>
														<td>@cMenu.Year</td>
														<td>@cMenu.ClassName</td>
														<td>@cMenu.SubName</td>
														<td>@(cMenu.IsUpload ? "已上傳" : "未上傳")</td>
														<td>
															<a href="@Url.Action("Modify", "P_LectorClass", new { ED_ID = cMenu.ED_ID })" class="btn btn-info">編輯教學資料</a>
														</td>
													</tr>
												}
											}
											else
											{
												<tr>
													<td colspan="5" align="center">查無資料!</td>
												</tr>
											}
										</tbody>
									</table>
									<!--換頁模組-->
									@if (!(Model.classMenuPageList is null) && Model.classMenuPageList.Count > 0)
									{
										@Html.Partial("../Shared/_pageList", Model.classMenuPageList)
									}
								</div>
							</div>
						</div>
					</div>
					<!--資料Table End-->
				</div>
			</div>
		</div>
	</div>
</div>
