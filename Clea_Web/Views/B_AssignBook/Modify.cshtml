@{
	Layout = "~/Views/Shared/_LayoutBackEnd.cshtml";
}
@model Clea_Web.ViewModels.AssignBookViewModel.BookInfoModel
<div class="main-panel">
	<div class="content-wrapper">
		<div class="row">

			<div class="col-12 mb-3">
				<div class="accordion" id="accordionPanelsStayOpenExample">
					<!--搜尋-->
					<form class="forms-sample" method="post" action="@Url.Action("Modify","B_AssignBook")" enctype="multipart/form-data">
						@Html.AntiForgeryToken()
						@Html.HiddenFor(x => x.B_UID)
						<div class="col-lg-12 grid-margin stretch-card">
							<div class="card">
								<div class="card-body">
									<div class="row">
										<div class="col-md-4">
											<div class="form-group">
												<h3>教材內容</h3>
											</div>
										</div>
									</div>
									<div class="row">
										<div class="col-md-6">
											<div class="form-group">
												<label for="exampleInputEmail3">教材名稱</label>
												@Html.TextBoxFor(x => x.B_Name, new { @class = "form-control form-control", placeholder = "教材名稱", disabled = "disabled" })
											</div>
										</div>
										<div class="col-md-6">
											<div class="form-group">
												<label for="exampleInputEmail3">教材代碼</label>
												@Html.TextBoxFor(x => x.B_ID, new { @class = "form-control form-control", placeholder = "教材代碼", disabled = "disabled" })
											</div>
										</div>
									</div>
									<div class="row">
										<div class="col-md-6">
											<div class="form-group">
												<label for="exampleInputEmail3">教材版本</label>
												@Html.TextBoxFor(x => x.B_Version, new { @class = "form-control form-control", placeholder = "教材版本", disabled = "disabled" })
											</div>
										</div>
										<div class="col-md-6">
											<div class="form-group">
												<label for="exampleInputEmail3">教材出版人</label>
												@Html.TextBoxFor(x => x.B_Publish, new { @class = "form-control form-control", placeholder = "教材出版人", disabled = "disabled" })
											</div>
										</div>
									</div>
									<div class="row">
										<div class="col-md-6">
											<div class="form-group">
												<label for="exampleInputEmail3">教材證號</label>
												@Html.TextBoxFor(x => x.B_Name, new { @class = "form-control form-control", placeholder = "教材證號", disabled = "disabled" })
											</div>
										</div>
										<div class="col-md-6">
											<div class="form-group">
												<label for="exampleInputEmail3">備註</label>
												@Html.TextAreaFor(x => x.B_ID, new { @class = "form-control form-control", placeholder = "備註", disabled = "disabled" })
											</div>
										</div>
									</div>
									<div class="row">
										<div class="col-md-8">
											<div class="form-group">
												<label for="exampleInputName1">檔案</label>
												@if (!string.IsNullOrEmpty(Model.FilePath))
												{
													<a href="" class="form-control form-control" readonly="readonly">@Model.FileName</a>
													@* <a href="" class="btn btn-warning mr-2">@Model.FileName</a> *@
												}
												else
												{
													@Html.TextBoxFor(x => x.file, new {  @class = "form-control form-control", @type="file" })
													@Html.ValidationMessageFor(x => x.file)
												}
											</div>
										</div>
										<div class="col-md-4">
											<div class="form-group">
												<label for="exampleInputName1">操作</label>
												@if (string.IsNullOrEmpty(Model.FilePath))
												{
													<button type="submit" class="form-control form-control btn btn-info mr-2">上傳檔案</button>
												}
												else
												{
													<a href="@Url.Action("Delete", "B_AssignBook", new { File_ID = Model.File_ID })" class="form-control form-control btn btn-danger mr-2">刪除檔案</a>
												}
												@* <button type="@(!string.IsNullOrEmpty(Model.FilePath) ? "button":"submit")" class="form-control form-control btn @(!string.IsNullOrEmpty(Model.FilePath) ?"btn-danger":"btn-info") mr-2">@(!string.IsNullOrEmpty(Model.FilePath) ? "刪除檔案" : "上傳檔案")</button> *@
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</form>
					<!--搜尋End-->
				</div>
			</div>
		</div>
	</div>
</div>
<script type="text/javascript">
	function save() {
		var formData = new FormData();


		formData.append('Id', this.id);
		formData.append('PostDate', this.postDate);
	}
</script>