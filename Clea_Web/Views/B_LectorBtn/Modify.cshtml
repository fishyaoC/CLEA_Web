    displaySelection() {
        var individualCheckbox = document.getElementById('inlineCheckbox1');
        var groupCheckbox = document.getElementById('inlineCheckbox2');
        var individualDiv = document.getElementById('individual');
        var groupDiv = document.getElementById('group');

        if (individualCheckbox.checked) {
            individualDiv.style.display = 'block';
            groupDiv.style.display = 'none';
        } else if (groupCheckbox.checked) {
            individualDiv.style.display = 'none';
            groupDiv.style.display = 'block';
        } else {
            individualDiv.style.display = 'none';
            groupDiv.style.display = 'none';
        }
    }
