@{
	Layout = "~/Views/Shared/_LayoutBackEnd.cshtml";
}
@model Clea_Web.ViewModels.AssignBookViewModel.ModifyModel
	<div class="content-wrapper">
		<div class="row">

			<div class="col-12 mb-3">
				<div class="accordion" id="accordionPanelsStayOpenExample">
					<!--搜尋-->
					<form class="forms-sample" method="post" action="@Url.Action("Modify","B_AssignBook")">
						@Html.AntiForgeryToken()
						<div class="col-lg-12 grid-margin stretch-card">
							<div class="card">
								<div class="card-body">
									<div class="row">
										<div class="col-md-4">
											<div class="form-group">
												<h3>評鑑內容</h3>
											</div>
										</div>
									</div>
									<div class="row">
										<div class="col-md-4">
											<div class="form-group">
												<h3>評鑑年度: @(Model.bookInfor.Year) 年</h3>
											</div>
										</div>
										<div class="col-md-4">
											<div class="form-group">
												<h3>教材名稱: @(Model.bookInfor.B_Name) ( @(Model.bookInfor.B_ID) )</h3>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					<div class="col-lg-12 grid-margin stretch-card">
						<a class="btn btn-primary mr-2" href="@Url.Action("Index","B_AssignBook")">回前頁</a>
					</div>
						<div class="col-lg-12 grid-margin stretch-card">
							@Html.HiddenFor(x=>x.modify.E_ID)
							@Html.HiddenFor(x=>x.modify.B_UID)
							<div class="card">
								<div class="card-body">
									<div class="row">
										<div class="col-md-8">
											<div class="form-group">
												<label for="exampleInputName1">指定評鑑教師</label>
												@Html.DropDownListFor(x=>x.modify.L_UID_Ev, Model.selectListItems, new { @class = "form-control form-control",id="Select2" })
												@Html.ValidationMessageFor(x=>x.modify.L_UID_Ev)
											</div>
										</div>
										<div class="col-md-4">
											<div class="form-group">
												<label for="exampleInputName1">操作</label>
												<button class="form-control form-control btn btn-primary mr-2" type="submit">儲存</button>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</form>
					<!--搜尋End-->
					<!--資料Table-->
					<div class="col-lg-12 grid-margin stretch-card">
						<div class="card">
							<div class="card-body">
								<h4 class="card-title">評鑑教師</h4>
								@*<p class="card-description">
								Add class <code>.table</code>
								</p> *@
								<div class="table-responsive">
									<table class="table">
										<thead>
											<tr>
												<th>序</th>
												<th>教師代碼</th>
												<th>教師名稱</th>
												<th>操作</th>
											</tr>
										</thead>
										<tbody>
											@if (!(Model.lst_evTeacher is null) && Model.lst_evTeacher.Count > 0)
											{
												Int32 rowCount = 0;
												foreach (var Ev in Model.lst_evTeacher)
												{
													rowCount++;
													<tr>
														<td>@rowCount</td>
														<td>@Ev.L_Ev_ID</td>
														<td>@Ev.L_Ev_Name</td>
														<td>
															<button type="button" class="btn btn-danger" onclick="del('@Model.modify.E_ID', '@Ev.L_UID_Ev')">刪除</button>
														</td>
													</tr>
												}
											}
											else
											{
												<tr>
													<td colspan="6" align="center">查無資料!</td>
												</tr>
											}
										</tbody>
									</table>

								</div>
							</div>
						</div>
					</div>
					<!--資料Table End-->

				</div>
			</div>
		</div>
	</div>
<script type="text/javascript">
	function del(EID, LUID) {
		//刪除按紐
		Swal.fire({
			title: '是否確定要刪除？',
			icon: 'warning',
			showCancelButton: true,
			confirmButtonColor: '#3085d6',
			cancelButtonColor: '#d33',
			confirmButtonText: '是',
			cancelButtonText: '否',
			heightAuto: false
		}).then((result) => {
			if (!result.isConfirmed) {
				return;
			}
			else {
				$.ajax({
					type: "POST",
					url: '../B_AssignBook/Delete',
					data: { E_ID: EID, L_UID_Ev:LUID },
					dataType: "json",
					success: function (response) {
						if (response.chk) {
							Swal.fire({
								confirmButtonColor: '#3085d6',
								confirmButtonText: '確定',
								heightAuto: false,
								icon: 'success',
								title: '刪除成功'
							}).then(() => {
								location.reload();
							});
						}
						else {
							Swal.fire({
								confirmButtonColor: '#3085d6',
								confirmButtonText: '確定',
								heightAuto: false,
								icon: 'warning',
								title: '刪除失敗',
								text: response.msg
							});
						}
					},
					error: function (thrownError) {
						Swal.fire({
							confirmButtonColor: '#3085d6',
							confirmButtonText: '確定',
							heightAuto: false,
							icon: 'warning',
							title: '刪除失敗',
							text: '系統異常，請洽管理員'
						});
					}
				});
			}

		})
	}
</script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.0/dist/js/select2.min.js"></script>
<script>
	$(document).ready(function () {
		$('#Select2').select2();
	});
</script>