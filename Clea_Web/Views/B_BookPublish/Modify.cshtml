@{
	Layout = "~/Views/Shared/_LayoutBackEnd.cshtml";
}
@model Clea_Web.ViewModels.BookViewModel.PublishInfo
<div class="content-wrapper">
	<div class="row">

		<div class="col-12 mb-3">
			<div class="accordion" id="accordionPanelsStayOpenExample">
				<!--搜尋-->
				<form class="forms-sample" method="post" action="@Url.Action("Add","B_BookPublish")">
					@Html.AntiForgeryToken()
					@Html.HiddenFor(x => x.BP_ID)
					<div class="col-lg-12 grid-margin stretch-card">
						<a class="btn btn-primary mr-2" href="@Url.Action("Index","B_BookPublish")">回前頁</a>
					</div>
					<div class="col-lg-12 grid-margin stretch-card">
						<div class="card">
							<div class="card-body">
								<div class="row">
									<div class="col-md-4">
										<div class="form-group">
											<label for="exampleInputName1">教材名稱</label>
											@Html.TextBoxFor(x=>x.BP_Name, new { @class = "form-control form-control" })
											@Html.ValidationMessageFor(x=>x.BP_Name)
										</div>
									</div>
									<div class="col-md-4">
										<div class="form-group">
											<label for="exampleInputName1">操作</label>
											<button class="form-control form-control btn btn-primary mr-2" type="submit">儲存</button>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</form>
				<!--搜尋End-->
			</div>
		</div>
	</div>
</div>