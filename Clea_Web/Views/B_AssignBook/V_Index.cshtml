@{
	Layout = "~/Views/Shared/_LayoutBackEnd.cshtml";
}
@model Clea_Web.ViewModels.AssignBookViewModel
	<div class="content-wrapper">
		<div class="row">
			<!--搜尋-->
			<div class="col-12 mb-3">
				<div class="accordion" id="accordionPanelsStayOpenExample">
					<div class="mb-2 mt-2">
						@* <a href="@Url.Action("Add", "B_AssignBook")" class="btn btn-info">新增評鑑</a> *@
					</div>
					<!--動作End-->
					<!--資料Table-->
					<div class="col-lg-12 grid-margin stretch-card">
						<div class="card">
							<div class="card-body">
								<h4 class="card-title">評鑑指定 - 教材</h4>
								<div class="table-responsive">
									<table class="table">
										<thead>
											<tr>
												<th>序</th>
												<th>教材名稱</th>
												<th>教材版本</th>
												<th>評鑑教師</th>
												<th>檔案上傳</th>
												<th>操作</th>
											</tr>
										</thead>
										<tbody>
											@if (!(Model.lst_EDInfo is null) && Model.lst_EDInfo.Count > 0)
											{
												Int32 rowCount = 0;
												foreach (var ed in Model.lst_EDInfo)
												{
													rowCount++;
													<tr>
														<td>@rowCount</td>
														<td>@ed.B_Name</td>
														<td>@ed.BD_Publish</td>
														<td>@ed.L_UID_Ev</td>
														<td>@(ed.IsUpload ? "是" : "否")</td>
														<td>
															<a href="@Url.Action("Import_File", "B_AssignBook", new { ED_ID = ed.ED_ID })" class="btn btn-info">編輯檔案</a>															
															@if (ed.IsEvaluate)
															{
																<a href="@Url.Action("V_Modify", "B_AssignBook", new { ED_ID = ed.ED_ID })" class="btn btn-success">檢視教材審查表</a>																
															}
														</td>
													</tr>
												}
											}
											else
											{
												<tr>
													<td colspan="6" align="center">查無資料!</td>
												</tr>
											}
										</tbody>
									</table>
								</div>
							</div>
						</div>
					</div>
					<!--資料Table End-->
				</div>
			</div>
		</div>
	</div>