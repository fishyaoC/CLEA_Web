@model Clea_Web.ViewModels.FileDownloadViewModel.SchModel

@{
    Layout = "~/Views/Shared/_LayoutBackEnd.cshtml";
}
<div class="content-wrapper">
    <div class="row">
        <!--搜尋-->
        <div class="accordion" id="accordionPanelsStayOpenExample">
            <div class="accordion-item rounded-bottom rounded-3">
                <h2 class="accordion-header" id="panelsStayOpen-headingOne">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
                        <h4 class="m-0">搜尋條件</h4>
                    </button>
                </h2>
                <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingOne">
                    <div class="accordion-body">
                        <form class="forms-sample" id="search-form" method="post" action="@Url.Action("FormIndex","B_Skill")">
                            @Html.AntiForgeryToken()
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="exampleInputName1">分類</label>
                                        @Html.DropDownListFor(x=>x.schItem.Class, Model.DropDownClass, new { id="search1",@class = "form-control form-control" })


                                    </div>
                                </div>
                                <div class="col-md-4">
                                <div class="form-group">
                                <label for="exampleInputName1">會員等級</label>
                                        @Html.DropDownListFor(x=>x.schItem.Level, Model.DropDownLevel, new { id="search2",@class = "form-control form-control" })
                                </div>
                                </div>
                            </div>
                            <div class="d-flex">
                                <button type="submit" class="btn btn-primary mr-2">搜尋</button>
                                <button type="button" class="btn btn-light mr-2" onclick="resetItem()">清除條件</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!--搜尋End-->
        <!--動作-->
        <div class="mb-2 mt-2">
            <a href="@Url.Action("FormModify","B_Skill", new{Uid = ""})" class="btn btn-info">新增</a>
        </div>
        <!--動作End-->
        <!--資料Table-->
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">表單下載管理 - 列表</h4>
                    @*<p class="card-description">
                    Add class <code>.table</code>
                    </p> *@
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>序</th>
                                    <th>分類</th>
                                    <th>標題</th>
                                    <th>啟用狀態</th>
                                    <th>最後編輯人員</th>
                                    <th>最後編輯時間</th>
                                    <th>操作</th>

                                </tr>
                            </thead>
                            <tbody>

                                @if (Model.schPageList2.Count > 0)
                                {
                                    Int32 rowCount = 0;
                                    foreach (var item in Model.schPageList2)
                                    {
                                        rowCount++;
                                        <tr>
                                            <td>@rowCount</td>
                                            <td>@item.Class</td>
                                            <td>@item.Title</td>
                                            <td>@item.Status</td>
                                            <td>@item.updUser</td>
                                            <td>@item.updDate</td>
                                            <td>
                                                @*編輯、刪除*@
                                                @* <button type="button" class="btn btn-success">編輯</button> *@
                                                <a href="@Url.Action("FormModify","B_Skill", new{Uid = item.Uid})" class="btn btn-success">編輯</a>
                                                <button type="button" class="btn btn-danger" onclick="del('@item.Uid')">刪除</button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" align="center">查無資料!</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!--換頁模組-->
                        @Html.Partial("../Shared/_pageList", Model.schPageList2)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    function del(Uid) {
        //刪除按紐
        Swal.fire({
            title: '是否確定要刪除？',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: '是',
            cancelButtonText: '否',
            heightAuto: false
        }).then((result) => {
            if (!result.isConfirmed) {
                return;
            }
            else {
                $.ajax({
                    type: "POST",
                    url: '../B_File/Delete',
                    data: { Uid: Uid },
                    dataType: "json",
                    success: function (response) {
                        if (response.chk) {
                            Swal.fire({
                                confirmButtonColor: '#3085d6',
                                confirmButtonText: '確定',
                                heightAuto: false,
                                icon: 'success',
                                title: '刪除成功'
                            }).then(() => {
                                location.reload();
                            });
                        }
                        else {
                            Swal.fire({
                                confirmButtonColor: '#3085d6',
                                confirmButtonText: '確定',
                                heightAuto: false,
                                icon: 'warning',
                                title: '刪除失敗',
                                text: response.msg
                            });
                        }
                    },
                    error: function (thrownError) {
                        Swal.fire({
                            confirmButtonColor: '#3085d6',
                            confirmButtonText: '確定',
                            heightAuto: false,
                            icon: 'warning',
                            title: '刪除失敗',
                            text: '系統異常，請洽管理員'
                        });
                    }
                });
            }

        })
    }

    function resetItem() {
        $('#search1').val(null);
        $('#search2').val(null);
    }
</script>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.0/dist/js/select2.min.js"></script>
<script>
    $(document).ready(function () {
        $('#search1').select2({
            placeholder: "展開後可使用下方搜尋框搜尋",
            allowClear: true,
        });
    });
</script>