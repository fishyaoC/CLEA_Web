@model Clea_Web.ViewModels.B_LectorAdvViewModel.Modify
@{
    Layout = "~/Views/Shared/_LayoutBackEnd.cshtml";
}

<div class="content-wrapper">
    <div class="row">
        <!--資訊-->
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <h3>進修資訊</h3>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <h3>年度: @(Model.LaYear) 年</h3>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <h3>講師: @(Model.LName)</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--資訊End-->
        <div class="mb-2 mt-2">
            <a class="btn btn-primary mr-2" href="@Url.Action("D_Index","B_LectorAdv", new{LUid = @Model.LUid,YearNow=@Model.LaYear})">回前頁</a>
        </div>
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    @*講師專區 瀏覽*@
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label for="exampleInputName" class="col-sm-3 col-form-label">標題</label>
                                <div class="col-sm-9">
                                    @Model.LaTitle
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label for="exampleInputName" class="col-sm-3 col-form-label">上傳時間</label>
                                <div class="col-sm-9">
                                    @Model.UptDate
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label for="exampleInputName" class="col-sm-3 col-form-label">上傳檔案</label>
                                <div class="col-sm-9">
                                    <a href="@Url.Action("DownloadFile","B_LectorAdv", new{FilePath = @Model.FilePath})" class="btn btn-success">@Model.FNameReal @Model.FExt</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
