@model Clea_Web.ViewModels.ViewBookViewModel.P_TeacherInfo
	<div class="content-wrapper">
		<div class="row">

			<div class="col-12 mb-3">
				<div class="accordion" id="accordionPanelsStayOpenExample">
					<!--搜尋-->
					<div class="col-lg-12 grid-margin stretch-card">
						<a class="btn btn-primary mr-2" href="@Url.Action("Index","B_ViewBook")">回前頁</a>
					</div>
					<div class="col-lg-12 grid-margin stretch-card">
						<div class="card">
							<div class="card-body">
								<div class="row">
									<div class="col-md-4">
										<div class="form-group">
											<h3 class="card-title">教材內容</h3>
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-md-6">
										<div class="form-group">
											<label for="exampleInputEmail3">教材名稱</label>
											@Html.TextBoxFor(x => x.bookInfo.B_Name, new { @class = "form-control form-control", placeholder = "教材名稱", disabled = "disabled" })
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											<label for="exampleInputEmail3">教材代碼</label>
											@Html.TextBoxFor(x => x.bookInfo.B_ID, new { @class = "form-control form-control", placeholder = "教材代碼", disabled = "disabled" })
										</div>
									</div>
								</div>
								@* <div class="row">
								<div class="col-md-6">
								<div class="form-group">
								<label for="exampleInputEmail3">教材版本</label>
								@Html.TextBoxFor(x => x.bookInfo.B_Version, new { @class = "form-control form-control", placeholder = "教材版本", disabled = "disabled" })
								</div>
								</div>
								<div class="col-md-6">
								<div class="form-group">
								<label for="exampleInputEmail3">教材出版人</label>
								@Html.TextBoxFor(x => x.bookInfo.B_Publish, new { @class = "form-control form-control", placeholder = "教材出版人", disabled = "disabled" })
								</div>
								</div>
								</div> *@
								@* <div class="row">
								<div class="col-md-6">
								<div class="form-group">
								<label for="exampleInputEmail3">教材證號</label>
								@Html.TextBoxFor(x => x.bookInfo.B_Name, new { @class = "form-control form-control", placeholder = "教材證號", disabled = "disabled" })
								</div>
								</div>
								<div class="col-md-6">
								<div class="form-group">
								<label for="exampleInputEmail3">備註</label>
								@Html.TextAreaFor(x => x.bookInfo.B_ID, new { @class = "form-control form-control", placeholder = "備註", disabled = "disabled" })
								</div>
								</div>
								</div> *@
							</div>
						</div>
					</div>


					<!--搜尋End-->
					<!--資料Table-->
					<div class="col-lg-12 grid-margin stretch-card">
						<div class="card">
							<div class="card-body">
								<h4 class="card-title">評鑑教師</h4>
								@*<p class="card-description">
								Add class <code>.table</code>
								</p> *@
								<div class="table-responsive">
									<table class="table">
										<thead>
											<tr>
												<th>序</th>
												<th>教師代碼</th>
												<th>教師名稱</th>
												<th>操作</th>
											</tr>
										</thead>
										<tbody>
											@if (!(Model.p_TeachersPageList is null) && Model.p_TeachersPageList.Count > 0)
											{
												Int32 rowCount = 0;
												foreach (var Ev in Model.p_TeachersPageList)
												{
													rowCount++;
													<tr>
														<td>@rowCount</td>
														<td>@Ev.L_ID_Ev</td>
														<td>@Ev.L_Name_Ev</td>
														<td>
															<a href="@Url.Action("Modify", "B_ViewBook")" class="btn btn-info">檢視教材審查表</a>
															<button type="button" class="btn btn-warning mr-2" onclick="location.href='@Url.Action("Export_ScoreWord", "B_ViewBook", new { ClvUid = Ev.LEv_UID })'" @(Ev.IsEvaluation ? "" : "disabled")> @(Ev.IsEvaluation ? "匯出教材審查表" : "尚未完成評分") </button>
														</td>
													</tr>
												}
											}
											else
											{
												<tr>
													<td colspan="6" align="center">查無資料!</td>
												</tr>
											}
										</tbody>
									</table>
									<!--換頁模組-->
									@* 									@if (!(Model.getClassLectorPageLists is null) && Model.getClassLectorPageLists.Count > 0)
									{
									@Html.Partial("../Shared/_pageList", Model.getClassLectorPageLists)
									} *@
								</div>
							</div>
						</div>
					</div>
					<!--資料Table End-->

				</div>
			</div>
		</div>
	</div>
<script type="text/javascript">
	function del(Uid) {
		//刪除按紐
		Swal.fire({
			title: '是否確定要刪除？',
			icon: 'warning',
			showCancelButton: true,
			confirmButtonColor: '#3085d6',
			cancelButtonColor: '#d33',
			confirmButtonText: '是',
			cancelButtonText: '否',
			heightAuto: false
		}).then((result) => {
			if (!result.isConfirmed) {
				return;
			}
			else {
				$.ajax({
					type: "POST",
					url: '../B_AssignBook/P_Delete',
					data: { LevId: Uid },
					dataType: "json",
					success: function (response) {
						if (response.chk) {
							Swal.fire({
								confirmButtonColor: '#3085d6',
								confirmButtonText: '確定',
								heightAuto: false,
								icon: 'success',
								title: '刪除成功'
							}).then(() => {
								location.reload();
							});
						}
						else {
							Swal.fire({
								confirmButtonColor: '#3085d6',
								confirmButtonText: '確定',
								heightAuto: false,
								icon: 'warning',
								title: '刪除失敗',
								text: response.msg
							});
						}
					},
					error: function (thrownError) {
						Swal.fire({
							confirmButtonColor: '#3085d6',
							confirmButtonText: '確定',
							heightAuto: false,
							icon: 'warning',
							title: '刪除失敗',
							text: '系統異常，請洽管理員'
						});
					}
				});
			}

		})
	}
</script>