@{
	Layout = "~/Views/Shared/_LayoutBackEnd.cshtml";
}
@model Clea_Web.ViewModels.LectorEvaluationViewModel
<div class="content-wrapper">
	<div class="row">
		<!--搜尋-->
		<div class="col-12 mb-3">
			<div class="accordion" id="accordionPanelsStayOpenExample">
				<!--資料Table-->
				<div class="col-lg-12 grid-margin stretch-card">
					<div class="card">
						<div class="card-body">
							<h4 class="card-title">評鑑資訊</h4>
							@*<p class="card-description">
							Add class <code>.table</code>
							</p> *@
							<div class="table-responsive">
								<table class="table">
									<thead>
										<tr>
											<th>序</th>
											<th>種類</th>
											<th>項目</th>
											<th>操作</th>
										</tr>
									</thead>
									<tbody>
										@if (!(Model.schEvInfosPageLists is null) && Model.schEvInfosPageLists.Count > 0)
										{
											Int32 rowCount = 0;
											foreach (var ev in Model.schEvInfosPageLists)
											{
												if (!ev.IsUpload)
												{
													continue;
												}
												else
												{
													rowCount++;
													<tr>
														<td>@rowCount</td>
														<td>@ev.mType</td>
														<td>
															@(ev.SubName_PName + "(" + ev.ClassName_BookName + ")")
														</td>
														<td>
															@if (ev.Status == 6 || ev.Status == 7)
															{
																<a href="@Url.Action("Modify","P_LectorEvaluation", new { ED_ID = ev.ED_ID })" class="btn btn-success">檢視</a>
															}
															else
															{
																<a href="@Url.Action("Modify","P_LectorEvaluation", new { ED_ID = ev.ED_ID })" class="btn btn-info">評分</a>
															}
														</td>
													</tr>
												}
											}
										}
										else
										{
											<tr>
												<td colspan="6" align="center">查無資料!</td>
											</tr>
										}
									</tbody>
								</table>
								<!--換頁模組-->
								@if (!(Model.schEvInfosPageLists is null) && Model.schEvInfosPageLists.Count > 0)
								{
									@Html.Partial("../Shared/_pageList", Model.schEvInfosPageLists)
								}
							</div>
						</div>
					</div>
				</div>
				<!--資料Table End-->
			</div>
		</div>
	</div>
</div>