@{
	Layout = "~/Views/Shared/_LayoutBackEnd.cshtml";
}
@model Clea_Web.ViewModels.ViewBookViewModel.schBookModel
<div class="main-panel">
	<div class="content-wrapper">
		<div class="row">
			<!--搜尋-->
			<div class="col-12 mb-3">
				<div class="accordion" id="accordionPanelsStayOpenExample">
					<div class="accordion-item">
						<h2 class="accordion-header" id="panelsStayOpen-headingOne">
							<button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
								<h4 class="m-0">搜尋條件</h4>
							</button>
						</h2>
						<div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingOne">
							<div class="accordion-body">
								<form class="forms-sample" method="post" action="@Url.Action("Index","B_ViewBook")">
									@Html.AntiForgeryToken()
									<div class="row">
										<div class="col-md-4">
											<div class="form-group">
												<label for="exampleInputName1">年度</label>
												@Html.DropDownListFor(x => x.schBookItem.Year, Model.selectList, new { @class = "form-control form-control", placeholder = "年度" })
											</div>
										</div>
										<div class="col-md-4">
											<div class="form-group">
												<label for="exampleInputName1">教材代碼</label>
												@Html.TextBoxFor(x => x.schBookItem.B_ID, new { @class = "form-control form-control", placeholder = "教材代碼" })
											</div>
										</div>
										<div class="col-md-4">
											<div class="form-group">
												<label for="exampleInputEmail3">教材名稱</label>
												@Html.TextBoxFor(x => x.schBookItem.B_Name, new { @class = "form-control form-control", placeholder = "教材名稱" })
											</div>
										</div>
									</div>
									<div class="d-flex">
										<button class="btn btn-light mr-2" onclick="">清除條件</button>
										<button type="submit" class="btn btn-primary mr-2">搜尋</button>
									</div>
								</form>
							</div>
						</div>
					</div>
					<!--搜尋End-->
					<!--動作-->
					<div class="mb-2 mt-2">
					</div>
					<!--動作End-->
					<!--資料Table-->
					<div class="col-lg-12 grid-margin stretch-card">
						<div class="card">
							<div class="card-body">
								<h4 class="card-title">評鑑指定 - 課程資訊</h4>
								@*<p class="card-description">
								Add class <code>.table</code>
								</p> *@
								<div class="table-responsive">
									<table class="table">
										<thead>
											<tr>
												<th>序</th>
												<th>年度</th>
												<th>教材代碼</th>
												<th>教材名稱</th>
												<th>教材版本</th>
												<th>教材出版人</th>
												<th>教材證號</th>
												<th>操作</th>
											</tr>
										</thead>
										<tbody>
											@if (!(Model.bookInfosPageList is null) && Model.bookInfosPageList.Count > 0)
											{
												Int32 rowCount = 0;
												foreach (var book in Model.bookInfosPageList)
												{
													rowCount++;
													<tr>
														<td>@rowCount</td>
														<td>@book.Year</td>
														<td>@book.B_ID</td>
														<td>@book.B_Name</td>
														<td>@book.B_Version</td>
														<td>@book.B_Publish</td>
														<td>@book.B_CNumber</td>
														<td>
															<a href="@Url.Action("P_Index", "B_ViewBook", new { B_UID = book.B_UID, Year = book.Year })" class="btn btn-info">檢視成績</a>
														</td>
													</tr>
												}
											}
											else
											{
												<tr>
													<td colspan="6" align="center">查無資料!</td>
												</tr>
											}
										</tbody>
									</table>
									<!--換頁模組-->
									@if (!(Model.bookInfosPageList is null) && Model.bookInfosPageList.Count > 0)
									{
										@Html.Partial("../Shared/_pageList", Model.bookInfosPageList)
									}
								</div>
							</div>
						</div>
					</div>
					<!--資料Table End-->
				</div>
			</div>
		</div>
	</div>
</div>
<script type="text/javascript">
	function resetItem() {

	}
</script>