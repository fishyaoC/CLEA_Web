@{
	Layout = "~/Views/Shared/_LayoutBackEnd.cshtml";
}
@model Clea_Web.ViewModels.ViewClassViewModel.Modify_Score
<div class="main-panel">
	<div class="content-wrapper">
		<div class="row">

			<div class="col-12 mb-3">
				<div class="accordion" id="accordionPanelsStayOpenExample">
					<!--搜尋-->

					<div class="col-lg-12 grid-margin stretch-card">
						<div class="card">
							<div class="card-body">
								<div class="row">
									<div class="col-md-4">
										<div class="form-group">
											<h3>評鑑內容</h3>
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-md-4">
										<div class="form-group">
											<h3>評鑑年度: @(Model.cSTinfo_V.Ev_Year) 年</h3>
										</div>
									</div>
									<div class="col-md-4">
										<div class="form-group">
											<h3>教師名稱: @(Model.cSTinfo_V.L_Name) ( @(Model.cSTinfo_V.L_ID) )</h3>
										</div>
									</div>
								</div>
								<div class="row">
									<div class="col-md-4">
										<div class="form-group">
											<h3>課程名稱: @(Model.cSTinfo_V.ClassName) ( @(Model.cSTinfo_V.ClassID) )</h3>
										</div>
									</div>
									<div class="col-md-4">
										<div class="form-group">
											<h3>科目名稱: @(Model.cSTinfo_V.SubName) ( @(Model.cSTinfo_V.SubID) )</h3>
										</div>
									</div>

								</div>
							</div>
						</div>
					</div>
					<div class="col-lg-12 grid-margin stretch-card">
						<a class="btn btn-primary mr-2" href="@Url.Action("G_Index","B_ViewClass", new{ CLUid = Model.cSTinfo_V.CL_UID, Year = Model.cSTinfo_V.Year })">回前頁</a>
					</div>

					<!--搜尋End-->
					<!--圖片檢視-->
					<div class="col-lg-12 grid-margin stretch-card">
						<div class="card">
							<div class="card-body">
								<h4 class="card-title">課程檔案</h4>
								<!--Banner-->
								<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
									<ol class="carousel-indicators">
										<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
										<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
										<li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
									</ol>
									<div class="carousel-inner">
										@if (Model.picPath.Count() >0)
										{
											foreach (String path in Model.picPath)
											{
												<div class="carousel-item active">
													<img class="@path" src="..." alt="First slideFFFF">
												</div>
											}

										}

@* 										<div class="carousel-item">
											<img class="d-block w-100" src="..." alt="Second slide">
										</div>
										<div class="carousel-item">
											<img class="d-block w-100" src="..." alt="Third slide">
										</div> *@
									</div>
									<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
										<span class="carousel-control-prev-icon" aria-hidden="true"></span>
										<span class="sr-only">Previous</span>
									</a>
									<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
										<span class="carousel-control-next-icon" aria-hidden="true"></span>
										<span class="sr-only">Next</span>
									</a>
								</div>
								<!--Banner-->
							</div>
						</div>
					</div>
					<!--圖片檢視-->
					<!--評分表&綜合意見-->
					<form class="forms-sample" method="post" action="@Url.Action("L_Modify","B_ViewClass")">
						@Html.AntiForgeryToken()
						@Html.HiddenFor(x => x.scoreModify.CLeID)
						@Html.HiddenFor(x => x.cSTinfo_V.CL_UID)
						@Html.HiddenFor(x => x.cSTinfo_V.Year)
						<div class="col-lg-12 grid-margin stretch-card">
							<div class="card">
								<div class="card-body">
									<h4 class="card-title">審查表</h4>
									<div class="table-responsive">
										<table class="table">
											<thead>
												<tr>
													<th>項目</th>
													<th>分數比例</th>
													<th>評分</th>
												</tr>
											</thead>
											<tbody>
												<tr>
													<td>1.簡報/實習內容符合核定教材版本</td>
													<td>60</td>
													<td>
														@Html.TextBoxFor(x => x.scoreModify.Score_A, new { @class = "form-control form-control" })
														@Html.ValidationMessageFor(x => x.scoreModify.Score_A)
													</td>
												</tr>
												<tr>
													<td>2.教學大綱與簡報內容正確性與關連性</td>
													<td>10</td>
													<td>
														@Html.TextBoxFor(x => x.scoreModify.Score_B, new { @class = "form-control form-control" })
														@Html.ValidationMessageFor(x => x.scoreModify.Score_B)
													</td>
												</tr>
												<tr>
													<td>3.補充教材/法令更新</td>
													<td>10</td>
													<td>
														@Html.TextBoxFor(x => x.scoreModify.Score_C, new { @class = "form-control form-control" })
														@Html.ValidationMessageFor(x => x.scoreModify.Score_C)
													</td>
												</tr>
												<tr>
													<td>4.相關案例說明</td>
													<td>10</td>
													<td>
														@Html.TextBoxFor(x => x.scoreModify.Score_D, new { @class = "form-control form-control" })
														@Html.ValidationMessageFor(x => x.scoreModify.Score_D)
													</td>
												</tr>
												<tr>
													<td>5.字體大小、美編色彩、適度圖案比例</td>
													<td>10</td>
													<td>
														@Html.TextBoxFor(x => x.scoreModify.Score_E, new { @class = "form-control form-control" })
														@Html.ValidationMessageFor(x => x.scoreModify.Score_E)
													</td>
												</tr>
											</tbody>
										</table>
									</div>
								</div>
								<div class="card-body">
									<h4 class="card-title">綜合意見回饋或修正建議</h4>
									@Html.TextAreaFor(x => x.scoreModify.Remark, new { @class = "form-control form-control" })
								</div>
								<div class="card-body">
									<button type="submit" class="btn btn-primary mr-2">儲存變更</button>
								</div>
							</div>
						</div>
					</form>
					<!--評分表&綜合意見-->
				</div>
			</div>
		</div>
	</div>
</div>