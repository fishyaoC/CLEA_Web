                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    @* <label class="col-sm-3 col-form-label">姓名</label> *@
                                    @Html.LabelFor(x => x.N_StartDate, new { @class = "col-sm-3 col-form-label" })
                                    <div class="col-sm-9">
                                        @* <input type="text" class="form-control" /> *@
                                        @Html.EditorFor(x => x.N_StartDate,new { @class = "form-control form-control date-picker"})
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label for="exampleInputName" class="col-sm-3 col-form-label">發布講師</label>
                                    <div class="col-sm-9">
                                        @Html.DropDownListFor(x=>x.R_ID, Model.DropDownListUser, new { @class = "form-control form-control" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    @Html.LabelFor(x => x.N_EndDate, new { @class = "col-sm-3 col-form-label" })
                                    <div class="col-sm-9">
                                        @Html.EditorFor(x => x.N_EndDate, new { @class = "form-control form-control date-picker"})
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="exampleInputName1">上傳檔案</label>
                                    <div class="col-sm-8">
                                        @* <input type="text" class="form-control" /> *@
                                        @Html.TextBoxFor(x => x.FileName, new { @class = "form-control form-control"})
                                    </div>
                                    <div class="col-sm-4">
                                        @if (string.IsNullOrEmpty(Model.FilePath))
                                        {
                                            <button type="submit" class="form-control form-control btn btn-info mr-2">瀏覽</button>
                                        }
                                        else
                                        {
                                            <a href="@Url.Action("Delete", "B_LectorBtn", new { File_ID = Model.File_ID })" class="form-control form-control btn btn-danger mr-2">刪除檔案</a>
                                        }

                                        @* <button type="@(!string.IsNullOrEmpty(Model.FilePath) ? "button":"submit")" class="form-control form-control btn @(!string.IsNullOrEmpty(Model.FilePath) ?"btn-danger":"btn-info") mr-2">@(!string.IsNullOrEmpty(Model.FilePath) ? "刪除檔案" : "上傳檔案")</button> *@
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        @Html.LabelFor(x => x.N_Content, new { @class = "col-sm-3 col-form-label" })
                                        <div class="col-sm-9">
                                            @Html.TextAreaFor(x => x.N_Content,20,35, new { @class = "form-control form-control" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    </form>
</div>


