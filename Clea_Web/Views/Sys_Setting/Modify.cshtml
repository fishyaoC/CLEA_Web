<script>

    function validatePassword() {
        var newPassword = document.getElementById('NewPW').value;
        var checkNewPassword = document.getElementById('CheckNewPW').value;

        if (newPassword.length < 8) {
            alert("新密碼必須大於8個字符");
            return false;
        }
        else if (newPassword !== checkNewPassword) {
            alert("新密碼與再次確認新密碼不一致");
            return false;
        }
        else {
            return true; // 密碼驗證通過
        }
    }

    function validateFile() {
        var filePath = "@Model.FilePath";

        if (filePath === null || filePath === '') {
            var fileInput = document.getElementById('file');
            if (fileInput.value === '') {
                alert("請上傳檔案");
                return false;
            }
        } else {
            return true;
        }

        return true; // 檔案驗證通過
    }

    function validateForm() {
        if (!validatePassword()) {
            return false;
        }
        else if (!validateFile()) {
            return false;
        }
        else {
            return true; // 驗證通過，提交表單
        }
    }
</script>
