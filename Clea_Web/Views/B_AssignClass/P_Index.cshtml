@{
	Layout = "~/Views/Shared/_LayoutBackEnd.cshtml";
}
@model Clea_Web.ViewModels.AssignClassViewModel.CL_Model
<div class="main-panel">
	<div class="content-wrapper">
		<div class="row">

			<div class="col-12 mb-3">
				<div class="accordion" id="accordionPanelsStayOpenExample">
					<!--搜尋-->
					<div class="col-lg-12 grid-margin stretch-card">
						<div class="card">
							<div class="card-body">
								<div class="row">
									<div class="col-md-6">
										<div class="form-group">
											<h3>課程名稱: @(Model.ClassInfo.ClassName) ( @(Model.ClassInfo.ClassID) )</h3>
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-group">
											<h3>科目名稱: @(Model.ClassInfo.SubName) ( @(Model.ClassInfo.SubID) )</h3>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
					<!--搜尋End-->
					<!--資料Table-->
					<div class="col-lg-12 grid-margin stretch-card">
						<div class="card">
							<div class="card-body">
								<h4 class="card-title">評鑑 - 科目授課資訊</h4>
								@*<p class="card-description">
								Add class <code>.table</code>
								</p> *@
								<div class="table-responsive">
									<table class="table">
										<thead>
											<tr>
												<th>序</th>
												@* <th>科目代碼</th> *@
												<th>教師代碼</th>
												<th>授課教師</th>
												<th>操作</th>
											</tr>
										</thead>
										<tbody>
											@if (!(Model.getClassLectorPageLists is null) && Model.getClassLectorPageLists.Count > 0)
											{
												Int32 rowCount = 0;
												foreach (var CLec in Model.getClassLectorPageLists)
												{
													rowCount++;
													<tr>
														<td>@rowCount</td>
														<td>@CLec.L_ID</td>
														<td>@CLec.L_Name</td>
														<td>
															<a href="@Url.Action("L_Modify","B_AssignClass", new { CL_UID = CLec.CL_UID, mType = 0 })" class="btn btn-success">指定評鑑(測試鈕)</a>

															@if (CLec.IsUpload)
															{
																<a href="@Url.Action("L_Modify","B_AssignClass", new { CL_UID = CLec.CL_UID, mType = 0 })" class="btn btn-success">指定評鑑</a>
															}
															else
															{
																@:尚未上傳課程檔案
															}
														</td>
													</tr>
												}
											}
											else
											{
												<tr>
													<td colspan="6" align="center">查無資料!</td>
												</tr>
											}
										</tbody>
									</table>
									<!--換頁模組-->
@* 									@if (!(Model.getClassLectorPageLists is null) && Model.getClassLectorPageLists.Count > 0)
									{
										@Html.Partial("../Shared/_pageList", Model.getClassLectorPageLists)
									} *@
								</div>
							</div>
						</div>
					</div>
					<!--資料Table End-->
					<div text-align:center;>
						<a class="btn btn-primary mr-2" href="@Url.Action("L_Index","B_AssignClass", new{ U_ID = Model.ClassInfo.C_UID})">回前頁</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<script type="text/javascript">

</script>