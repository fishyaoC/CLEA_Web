@{
	Layout = "~/Views/Shared/_LayoutBackEnd.cshtml";
}
@model Clea_Web.ViewModels.AssignClassViewModel.AddModel
<div class="main-panel">
	<div class="content-wrapper">
		<div class="row">

			<div class="col-12 mb-3">
				<div class="accordion" id="accordionPanelsStayOpenExample">
					<!--搜尋-->
					<form class="forms-sample" method="post" action="@Url.Action("Add","B_AssignClass")">
						@Html.AntiForgeryToken()
						<div class="col-lg-12 grid-margin stretch-card">
							<a class="btn btn-primary mr-2" href="@Url.Action("Index","B_AssignClass")">回前頁</a>
						</div>
						<div class="col-lg-12 grid-margin stretch-card">
							<div class="card">
								<div class="card-body">
									<div class="row">
										<div class="col-md-4">
											<div class="form-group">
												<label for="exampleInputName1">評鑑年度</label>
												@Html.DropDownListFor(x=>x.addModify.Year, Model.Year_selectListItems, new { @class = "form-control form-control" })
												@Html.ValidationMessageFor(x=>x.addModify.Year)
											</div>
										</div>
										<div class="col-md-4">
											<div class="form-group">
												<label for="exampleInputName1">評鑑課程</label>
												@Html.DropDownListFor(x=>x.addModify.C_UID, Model.Class_selectListItems, new { @class = "form-control form-control" })
												@Html.ValidationMessageFor(x=>x.addModify.C_UID)
											</div>
										</div>
										<div class="col-md-4">
											<div class="form-group">
												<label for="exampleInputName1">操作</label>
												<button class="form-control form-control btn btn-primary mr-2" type="submit">儲存</button>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</form>
					<!--搜尋End-->				
				</div>
			</div>
		</div>
	</div>
</div>