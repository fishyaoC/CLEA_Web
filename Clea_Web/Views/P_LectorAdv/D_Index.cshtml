@model Clea_Web.ViewModels.B_LectorAdvViewModel.D_Model

@{
    Layout = "~/Views/Shared/_LayoutBackEnd.cshtml";
}
<div class="content-wrapper">
    <div class="row">
        <!--資訊-->
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <h3>進修資訊</h3>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <h3>年度: @(Model.YearNow) 年</h3>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <h3>講師: @(Model.LName)</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--資訊End-->
        <div class="mb-2 mt-2">
            <a class="btn btn-primary mr-2" href="@Url.Action("Index","P_LectorAdv")">回前頁</a>
        </div>
        <!--資料Table-->
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">@(Model.YearNow) 年進修資料</h4>
                    @*<p class="card-description">
                    Add class <code>.table</code>
                    </p> *@
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>序</th>
                                    <th>標題</th>
                                    <th>檔案名稱</th>
                                    <th>動作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.D_PageList.Count > 0)
                                {
                                    Int32 rowCount = 0;
                                    foreach (var item in Model.D_PageList)
                                    {
                                        rowCount++;
                                        <tr>
                                            <td>@rowCount</td>
                                            <td>@item.LaTitle</td>
                                            <td>@item.FileName</td>
                                            <td>
                                                @*編輯、刪除*@
                                                @if (item.YearNow == item.LaYear)
                                                {
                                                    <a href="@Url.Action("Modify","P_LectorAdv", new{LaUid = item.LaUid,YearNow = item.LaYear})" class="btn btn-success">編輯</a>
                                                    <button type="button" class="btn btn-danger" onclick="del('@item.LaUid')">刪除</button>
                                                }
                                                @if (item.YearNow != item.LaYear)
                                                {
                                                    <a href="@Url.Action("V_Modify","P_LectorAdv", new{LaUid = item.LaUid,YearNow = item.LaYear})" class="btn btn-success">閱覽</a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" align="center">查無資料!</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!--換頁模組-->
                        @Html.Partial("../Shared/_pageList", Model.D_PageList)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function del(LaUid) {
        //刪除按紐
        Swal.fire({
            title: '是否確定要刪除？',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: '是',
            cancelButtonText: '否',
            heightAuto: false
        }).then((result) => {
            if (!result.isConfirmed) {
                return;
            }
            else {
                $.ajax({
                    type: "POST",
                    url: '../P_LectorAdv/Delete',
                    data: { LaUid: LaUid },
                    dataType: "json",
                    success: function (response) {
                        if (response.chk) {
                            Swal.fire({
                                confirmButtonColor: '#3085d6',
                                confirmButtonText: '確定',
                                heightAuto: false,
                                icon: 'success',
                                title: '刪除成功'
                            }).then(() => {
                                location.reload();
                            });
                        }
                        else {
                            Swal.fire({
                                confirmButtonColor: '#3085d6',
                                confirmButtonText: '確定',
                                heightAuto: false,
                                icon: 'warning',
                                title: '刪除失敗',
                                text: response.msg
                            });
                        }
                    },
                    error: function (thrownError) {
                        Swal.fire({
                            confirmButtonColor: '#3085d6',
                            confirmButtonText: '確定',
                            heightAuto: false,
                            icon: 'warning',
                            title: '刪除失敗',
                            text: '系統異常，請洽管理員'
                        });
                    }
                });
            }

        })
    }

    function clearForm() {
        //清除
        document.getElementById("search-form").reset();
    }
</script>